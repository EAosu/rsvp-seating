generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts            Account[]
  sessions            Session[]
  events              Event[]
  passwordResetTokens PasswordResetToken[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@map("password_reset_tokens")
}

model Event {
  id           String      @id @default(cuid())
  userId       String? // Nullable initially for migration
  title        String
  eventDate    DateTime
  venue        String?
  households   Household[] // נשמר לתאימות אחורה (אופציונלי)
  guests       Guest[]
  tables       Table[]
  invites      Invite[]
  contacts     Contact[] // כתובות ווטסאפ לאירוע זה
  settingsJson Json?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Household {
  id      String   @id @default(cuid())
  eventId String
  event   Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  name    String
  group   String? // צד כלה/חתן, חברים מהצבא...
  phoneWa String // מספר ראשי "משפחתי" (היסטורי/אופציונלי)
  guests  Guest[]
  invites Invite[] // כעת 1:Many
  notes   String?
}

model Guest {
  id             String     @id @default(cuid())
  eventId        String
  householdId    String? // אופציונלי - אפשר אורחים ללא Household
  fullName       String
  relation       String?
  group          String? // קבוצה/תיוג (צד חתן/כלה/חברים...)
  mealPreference String?
  rsvpStatus     RsvpStatus @default(PENDING)
  tableId        String?
  seatNumber     Int?
  phoneWa        String?    @db.VarChar(32) // טלפון אישי (לא חובה)
  invitedSeats   Int?       @default(1) // מספר מושבים שהוזמנו
  confirmedSeats Int? // מספר מושבים מאושרים (RSVP)

  event     Event      @relation(fields: [eventId], references: [id], onDelete: Cascade)
  household Household? @relation(fields: [householdId], references: [id], onDelete: SetNull)
  table     Table?     @relation(fields: [tableId], references: [id])

  contactLinks ContactGuest[]
}

model Contact {
  id          String    @id @default(cuid())
  eventId     String
  event       Event     @relation(fields: [eventId], references: [id], onDelete: Cascade)
  phoneWa     String    @db.VarChar(32)
  displayName String?
  scope       RsvpScope @default(ALL_LINKED) // איך להחיל תשובת RSVP מהמספר הזה
  notes       String?

  invites    Invite[]
  guestLinks ContactGuest[]

  @@unique([eventId, phoneWa]) // פעם אחת לכל מספר באירוע
}

model ContactGuest {
  contactId String
  guestId   String
  role      ContactRole @default(PRIMARY) // PRIMARY/PROXY/OTHER

  contact Contact @relation(fields: [contactId], references: [id], onDelete: Cascade)
  guest   Guest   @relation(fields: [guestId], references: [id], onDelete: Cascade)

  @@id([contactId, guestId])
}

model Invite {
  id      String @id @default(cuid())
  eventId String
  event   Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)

  // תמיכה לאחור: ייתכנו הזמנות שהיו צמודות ל-Household
  householdId String?
  household   Household? @relation(fields: [householdId], references: [id], onDelete: SetNull)

  // המודל החדש: הזמנה פר-Contact (דה-דופ לפי eventId+contactId)
  contactId String?
  contact   Contact? @relation(fields: [contactId], references: [id], onDelete: Cascade)

  phoneWa    String?      @db.VarChar(32) // פאלבק/היסטוריה
  waThreadId String?
  status     InviteStatus @default(SENT)
  lastSentAt DateTime?
  rsvpToken  String?      @unique

  @@unique([eventId, contactId]) // מותר NULL בקומפוזיט ב-Postgres
}

model Table {
  id       String  @id @default(cuid())
  eventId  String
  event    Event   @relation(fields: [eventId], references: [id], onDelete: Cascade)
  name     String
  capacity Int
  guests   Guest[]
  notes    String?
}

enum RsvpStatus {
  PENDING
  YES
  NO
  MAYBE
}

enum InviteStatus {
  DRAFT
  SENT
  DELIVERED
  READ
  REMINDER_SENT
}

enum RsvpScope {
  ALL_LINKED
  PRIMARY_ONLY
}

enum ContactRole {
  PRIMARY
  PROXY
  OTHER
}
